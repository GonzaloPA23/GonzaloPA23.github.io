<style>
  .text-gradient {
    --bg-size: 200%;
    font-family: sans-serif;
    background: linear-gradient(90deg, #bd11ff, #fd1d1d, #9931ec, #9a4dd0) 0 0 /
      var(--bg-size) 100%;
    color: transparent;
    background-clip: text;
  }

  @media (prefers-reduced-motion: no-preference) {
    .text-gradient {
      animation: move-bg 5s linear infinite;
    }

    @keyframes move-bg {
      to {
        background-position: var(--bg-size) 0;
      }
    }
  }
</style>
